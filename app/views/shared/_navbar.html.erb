<div id="top-nav" class="navbar fixed-top navbar-expand-lg navbar-dark">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "safetybar.png" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="topnavbar">
    <ul class="navbar-nav ml-auto">
      <% if user_signed_in? %>
        <li class="nav-item active pr-2">
          <%= link_to "Home", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item pr-2">
          <%= link_to "Denunciar", new_report_path, class: "nav-link" %>
        </li>
        <li class="nav-item pr-2">
          <%= link_to "Ver Mapa", show_map_path, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown pr-2">
          <% if current_user.photo.attached? %>
            <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <%= image_tag "noimage.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Editar minha conta", edit_user_registration_path, class: "dropdown-item" %>
            <%= link_to "Denunciar", new_report_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item pr-2">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
